{
  "manifest_version": 3,
  "name": "DTZ",
  "description": "Screen time break extension for autistic people",
  "version": "1.0",
  "authors": ["Domitille Bonnemain", "Zo√© Lecaille", "Tijana Laporte Mitrovic"],
  
  
  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage", 
    "declarativeContent", 
    "activeTab", 
    "scripting", 
    "tabs",
    "alarms",
    "notifications"
],

  "host_permissions": [
    "*://*/*"
  ],
  

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "timeData/timer.html"
}
