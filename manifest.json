{
  "manifest_version": 3,
  "name": "DTZ",
  "description": "Screen time break extension for autistic people",
  "version": "1.0",
  "authors": "Domitille Bonnemain, Zo√© Lecaille, Tijana Laporte Mitrovic",

  "action": {
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }  
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    "popup.css"
  ]


  
}
