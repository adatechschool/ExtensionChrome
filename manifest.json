{
    "_comment": "Clés obligatoires: 'manifest_version', 'name' & 'version':",
  
    "manifest_version": 3,
    "name": "DTZ",
    "description": "Screen time break extension for autistic people",
    "version": "1.0",
    "authors": "Domitille Bonnemain, Zoé Lecaille, Tijana Laporte Mitrovic",
  
    "_comment1": "Boutons qui s'ajouttent à la barre d'outils du navigateur",
  
    "action": {
      "default_popup": "index.html"
    },
    "_comment2": "Déclarer le script de contenu",

    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": [
          "popup.js"
        ]
      }  
    ],

    "_comment3": "Page d'arrière plan",

    "background" : {
      "service_worker" : "background.js"
      
    }
    
}